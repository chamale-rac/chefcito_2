<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/filter_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="291dp"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="60dp"

        android:layout_weight="1"
        android:backgroundTint="@color/pink"
        android:elevation="10dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="Add"
        android:textAllCaps="false"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/profile_settings_tittle_txtView2"
        android:layout_width="379dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/recipe01_step01_tittle"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodImage" />

    <TextView
        android:id="@+id/foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/recipe01"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/foodImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView

        android:id="@+id/foodImage"
        android:layout_width="378dp"
        android:layout_height="147dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="25dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/profile_settings_tittle_txtView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodName"
        tools:srcCompat="@tools:sample/avatars" />

    <!-- Horizontal scrollView -->
    <HorizontalScrollView
        android:id="@+id/horizontalScroll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="375dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodName">

        <!-- using linear layout to store multiple view
            inside a Horizontal Scroll View -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <!-- multiple button views to show a scrollable horizontal list -->
            <Button
                android:id="@+id/C"
                android:layout_width="385dp"
                android:layout_height="225dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/white"
                android:padding="4dp"
                android:text="GeeksforGeeks"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/Co"
                android:layout_width="385dp"
                android:layout_height="225dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/white"
                android:padding="4dp"
                android:text="GeeksforGeeks"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/L"
                android:layout_width="385dp"
                android:layout_height="225dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/white"
                android:padding="4dp"
                android:text="GeeksforGeeks"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/Ha"
                android:layout_width="385dp"
                android:layout_height="225dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/white"
                android:padding="4dp"
                android:text="GeeksforGeeks"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/Hah"
                android:layout_width="385dp"
                android:layout_height="225dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/white"
                android:padding="4dp"
                android:text="GeeksforGeeks"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/ge"
                android:layout_width="385dp"
                android:layout_height="225dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/white"
                android:padding="4dp"
                android:text="GeeksforGeeks"
                android:textColor="@color/black" />
        </LinearLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>